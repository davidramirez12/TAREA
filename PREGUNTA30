
num1 = input("Ingrese su primer numero: ")
variable = input("Ingrese la variable(+, -, *, /): ")
num2 = input("Ingrese el segundo numero ")

suma = float(num1) + float(num2)
resta = float(num1) - float(num2)
multiplicacion = float(num1) * float(num2)
division = float(num1) / float(num2)

if variable == "+":
    print (suma)

elif variable == "-":
        print(resta)

elif variable == "*":
    print(multiplicacion)

elif variable == "/":
    print(division)

else:
    print("Error: Ingrese un dato valido por favor")